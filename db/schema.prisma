datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "go run github.com/steebchen/prisma-client-go"
}

model User {
  id          String      @id @default(uuid())
  deviceUuid  String      @unique
  lastLogin   DateTime
  openCount   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  levelHistories LevelHistory[]
  devices     UserDevice[]
}

model LevelHistory {
  id        String   @id @default(uuid())
  userId    String   
  level     Int
  attempts  Int
  timeSpent Int
  rank      Int
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, level])
}

model UserDevice {
  id        String   @id @default(uuid())
  userId      String @unique
  brand       String
  deviceType  String
  isDevice    Boolean
  manufacturer String
  modelName   String
  osName      String
  osVersion   String
  user        User     @relation(fields: [userId], references: [id])
}